          <div className="mt-20 text-center">
            <Link
              to="/features"
              className={`inline-flex items-center px-6 py-3 text-base font-medium rounded-md shadow-sm ${
                isDark 
                  ? 'text-white bg-blue-700 hover:bg-blue-600' 
