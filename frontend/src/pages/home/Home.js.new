                        to="/register"
                        className="flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-300"
                      >
                        Get Started
                      </Link>
                      <Link
                        to="/features"
                        className={`flex items-center justify-center px-4 py-3 border text-base font-medium rounded-md ${
                          isDark 
                            ? 'text-gray-300 border-gray-700 hover:bg-gray-800'
                            : 'text-gray-700 border-gray-300 hover:bg-gray-100'
                        } transition-colors duration-300`}
                      >
                        View Features
                      </Link>
                    </div>
                  </div>
                </div>
              </div>
              
              <div className="mt-12 lg:mt-0 lg:ml-auto animate-on-scroll" id="hero-image">
                <div className="pl-4 -mr-48 sm:pl-6 md:-mr-16 lg:px-0 lg:m-0 lg:relative lg:h-full lg:col-span-6">
                  <div className={`w-full rounded-xl shadow-xl ring-1 overflow-hidden lg:absolute lg:right-0 lg:h-full lg:w-auto lg:max-w-none ${
                    isDark ? 'ring-gray-700' : 'ring-gray-400/10'
