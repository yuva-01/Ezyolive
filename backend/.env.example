# Environment
NODE_ENV=development

# Server
PORT=5000
API_BASE_URL=http://localhost:5000

# Database
MONGODB_URI=mongodb://localhost:27017/ezyolive

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=30d
JWT_COOKIE_EXPIRES_IN=30

# Email
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@ezyolive.com

# Telehealth
TELEHEALTH_API_KEY=your_telehealth_api_key
TELEHEALTH_API_SECRET=your_telehealth_api_secret

# Cloud Storage
CLOUD_PROVIDER=aws
AWS_BUCKET_NAME=ezyolive-storage
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
